{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": false,
        "target": "ES5",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "declaration": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "types": ["jest", "node"],
        "rootDir": "./src",
    },
    "include": [
        "src/**/*",
    ]
}
